              <span class="badge badge-lg badge-success badge-pill badge-float badge-float-outside">
                Price
              </span>
              <!-- Image -->
              <div class="card-zoom">
                <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/2/2b/Khaomanee_cat.jpg/1200px-Khaomanee_cat.jpg", class: "card-img", alt: "..."%>
              </div>

              <!-- Overlay -->
              <div class="card-img-overlay card-img-overlay-hover">
                <div class="card-body bg-white">

              <!-- Preheading -->
                    <span class="badge badge-pill badge-primary-soft mb-2">
                      <span class="h6 text-uppercase font-weight-bold">Catégorie</span>
                    </span>
                    <hr>

              <p class="mb-0 text-muted">
                <h3>Prénom</h3>
                <small>
                  Ma super description
                </small>
              </p>

                </div>
              </div>

            </a>
          </div>
        </td>
        <td data-th="Quantity">
          <input type="number" class="form-control text-center" value="1">
        </td>
